<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Posts</a></li>
                <li><a href="/postvideo">New Post</a></li>
                <li class="search">
                    <input type="text" placeholder="Search">
                    <button type="button" style="background-color:#757575;">&#128269</button>
                </li>
                <li><a href="/login">Login</a></li>
                <li><a href="/registration" style="background-color:#731de0;">Register</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <div class="container">
            <h2>Upload Video</h2>
            <form id="post-image" class="input-form" action="/posts/create" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="post-title">Post Title</label>
                    <input id="post-title" type="text" name="title" placeholder="Post Title" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" rows="4" cols="100"></textarea>
                </div>
                <div class="form-group">
                    <label for="post-video">Upload</label>
                    <input type="file" id="post-video" name="videoUpload" required>
                </div>
                <div class="form-group checkbox-group">
                    <input type="checkbox" id="checkbox" required>
                    <label for="checkbox">I accept the <a href="#">Acceptable Use Policy</a></label>
                </div>
                <button type="submit">Post</button>
            </form>

        </div>
    </main>
</body>
